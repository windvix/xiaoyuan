<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	
    <item>
        <shape>
            <solid android:color="#d6d6d6"/>
            <corners 
                android:radius="6dp"/>
        </shape>
    </item>
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerX="0.1"
                android:centerY="0.1"
                android:endColor="#f4f4f4"
                android:startColor="#eeeeee"
                android:type="linear" />

            <corners
                android:radius="6dp"/>
        </shape>
    </item>

</layer-list>