<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#feffff"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item 
        android:top="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.4"
                android:endColor="#c9cbc6"
                android:startColor="#f2f8ff"
                android:type="linear" />

            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>