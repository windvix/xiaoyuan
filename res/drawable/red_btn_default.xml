<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#454850"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item 
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.7"
                android:endColor="#e98181"
                android:startColor="#d41011"
                android:type="linear" />

            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>