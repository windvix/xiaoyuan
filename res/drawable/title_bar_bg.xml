<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="#4786b8"/>
        </shape>
    </item>
    
    <item
        android:top="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="#cedce8"/>
        </shape>
    </item>
    <item
        android:top="2dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerX="0.1"
                android:centerY="0.1"
                android:endColor="#84d4fb"
                android:startColor="#639fcf"
                android:type="linear" />
        </shape>
    </item>

</layer-list>