<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item>
        
        <shape>
            <solid 
                android:color="#4786b8"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerX="0.1"
                android:centerY="0.4"
                android:endColor="#7ab5e4"
                android:startColor="#639fcf"
                android:type="linear" />

            <corners
                android:radius="5dp"/>
        </shape>
    </item>

</layer-list>