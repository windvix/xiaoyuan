<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/guide_04" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="@dimen/nav_btn_margin_bottom" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_btn"
            android:gravity="center"
            android:id="@+id/guide_btn"
            android:paddingBottom="@dimen/nav_btn_padding_top"
            android:paddingLeft="@dimen/nav_btn_padding_left"
            android:paddingRight="@dimen/nav_btn_padding_left"
            android:paddingTop="@dimen/nav_btn_padding_top"
            android:text="立即体验"
            android:textStyle="bold"
            android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>